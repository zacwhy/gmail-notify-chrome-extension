{
  "manifest_version": 2,

  "name": "Gmail Notifier",
  "description": "This extension shows unread mail count in badge",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "alarms",
    "https://mail.google.com/"
  ]
}
